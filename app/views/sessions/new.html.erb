<div id = "title">Shortcuts</div>
<h2 style= "position: absolute; top: 120px; color: white">Sign in</h2>
<%= form_for(@user, url: sessions_path) do |f| %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>
