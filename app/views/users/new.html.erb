<div id = "title">Shortcuts</div>
<h2 style= "position: absolute; top: 120px; color: white">Sign up</h2>
<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

  <% end %>
